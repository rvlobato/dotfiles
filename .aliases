#pip user
function pip() {
	  if [[ "$1" == "install" ]]; then
	      shift 1
	      command pip install --user "$@"
	  else
	      command pip "$@"
	  fi
}

#mkdir cd
mkcd ()
{
  mkdir -p -- "$1" && cd -P -- "$1"
}
